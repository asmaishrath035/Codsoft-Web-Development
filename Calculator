        }

        .calculator {
            width: 300px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .display {
            padding: 20px;
            background-color: #68ded8;
            color: #fff;
            font-size: 2em;
            text-align: right;
        }

        .buttons {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 1px;
        }

        button {
            padding: 20px;
            background-color: #e0e0e0;
            border: none;
            font-size: 1.5em;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        button:hover {
            background-color: #36c2aa;
        }

        button:active {
            background-color: #c0c0c0;
